<Window x:Class="ExamTimer14.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exam Timer Settings" Height="200" Width="410" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label Content="Centre Number:" HorizontalAlignment="Left" Margin="10,6,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="123,10,0,0" Text="{Binding Path=CentreRef,Mode=TwoWay}" VerticalAlignment="Top" Width="259"/>
        <CheckBox Content="Show seconds during exams" HorizontalAlignment="Left" Margin="123,38,0,0" VerticalAlignment="Top" IsChecked="{Binding Path=ShowSeconds,Mode=TwoWay}"/>
        <CheckBox Content="Flash finish time at end of session" HorizontalAlignment="Left" Margin="123,58,0,0" VerticalAlignment="Top" IsChecked="{Binding Path=Pulse,Mode=TwoWay}"/>
        <CheckBox Content="Play Audio Warning" HorizontalAlignment="Left" Margin="123,78,0,0" VerticalAlignment="Top" IsEnabled="False" IsChecked="{Binding Path=PlayAudio,Mode=TwoWay}"/>
        <Button Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="307,126,0,0" VerticalAlignment="Top" Width="75" Click="btnOK_Click"/>
        <Button Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="10,126,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>
        


    </Grid>
</Window>
