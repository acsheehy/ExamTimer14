                    <DoubleAnimation
                        Storyboard.TargetName="btnExam1Edit"
                        Storyboard.TargetProperty="Opacity"
                        From="1" To="1" Duration="0:0:1" />
                    <DoubleAnimation
                        Storyboard.TargetName="btnExam1Edit"
                        Storyboard.TargetProperty="Opacity"
                        From="1" To="0" Duration="0:0:1" 
                        BeginTime="0:0:10"/>
                    <DoubleAnimation
                        Storyboard.TargetName="btnExam2Del"
                        Storyboard.TargetProperty="Opacity"
                        From="1" To="1" Duration="0:0:1" />
                    <DoubleAnimation
                        Storyboard.TargetName="btnExam2Del"
                        Storyboard.TargetProperty="Opacity"
                        From="1" To="0" Duration="0:0:1" 
