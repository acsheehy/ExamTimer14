                    <DoubleAnimation
                        Storyboard.TargetName="btnExam2Edit"
                        Storyboard.TargetProperty="Opacity"
                        From="1" To="1" Duration="0:0:1" />
                    <DoubleAnimation
                        Storyboard.TargetName="btnExam2Edit"
                        Storyboard.TargetProperty="Opacity"
                        From="1" To="0" Duration="0:0:1" 
