            <TextBlock Margin="2,0" Text="{Binding Path=Exam4.ExamName,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"/>
        </Viewbox>
        <Viewbox Grid.Column="1" Grid.Row="7" VerticalAlignment="Center">
