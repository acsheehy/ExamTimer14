                <Grid Grid.Column="5" Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Viewbox Grid.Row="0">
                        <Button Content="X"/>
                    </Viewbox>
                    <Viewbox Grid.Row="1">
                        <Button Content="Change"/>
                    </Viewbox>
                </Grid>
            </Grid>
        </DataTemplate>
